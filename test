print('hello, welcome to Trivia!')

ans = input(' Are you ready to play (yes/no):')
score = 0
total_q = 4

if ans.lower() == 'yes':
    ans = input('1. What is the best programming language? ')
    if ans.lower() == 'python':
        score += 1
        print('Correct')
    else:
        print('Incorrect')

    ans = input('2. What is 2 + 6 + 4 ')
    if ans == '12':
        score += 1
        print('correct')
    else:
        print('Incorrect')

    ans = input('3. What is better a 1050ti or 1060(graphics card)? ')
    if ans.lower() == '1060':
        score += 1
        print('correct')
    else:
        print('Incorrect')

    ans = input('4. Which Team came second in Premier League Rankings? ')
    if ans.lower() == ' manchester united' or ans.lower() == ' chelsea' or ans.lower() == ' arsenal':
        score += 1
        print('correct')
    else:
        print('Incorrect')


print('Thank you for playing, you got', score, " questions correct.")
mark = (score/total_q) * 100
print("Mark:", str(mark) + '%')
print(' Goodbye')
